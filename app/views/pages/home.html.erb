    let winner = document.getElementById("winner");
    let counter = document.getElementById("counter");

      player1Button.addEventListener("click", (event) => {
          // console.log(counter)
          if (player_1.innerHTML == winner.innerHTML){
            event.target.innerText = "Correct!";
            <%# event.target.counter + 1;
            counter + 1
            console.log(counter) %>
          } else {
            event.target.innerText = "Incorrect!";
          }
        });

      player2Button.addEventListener("click", (event) => {
          if (player_2.innerHTML == winner.innerHTML){
            event.target.innerText = "Correct!";
          } else {
            event.target.innerText = "Incorrect!";
          }
        });
  </script>
